{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin manifest schema for Graph-to-C++",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": { "type": "string" },
    "nodeType": { "type": "string" },
    "include": { "type": "string" },
    "function": { "type": "string" },
    "returnType": { "type": "string" },
    "params": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "kind": { "type": "string", "enum": ["input", "const", "output"] },
          "value": {}
        }
      }
    },
    "returns": {
      "type": "object",
      "properties": { "type": { "type": "string" } }
    },
    "supportedTargets": {
      "type": "array",
      "items": { "type": "string", "enum": ["native", "wasm"] }
    },
    "linkerFlags": { "type": "string" },
    "externC": { "type": "boolean" }
  }
}
